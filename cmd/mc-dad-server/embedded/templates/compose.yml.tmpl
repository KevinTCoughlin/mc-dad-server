services:
  minecraft:
    image: itzg/minecraft-server:latest
    ports:
      - "{{.Port}}:{{.Port}}"
      - "{{.BedrockPort}}:{{.BedrockPort}}/udp"
    environment:
      EULA: "TRUE"
      TYPE: "{{.ServerType}}"
      VERSION: "{{.Version}}"
      MEMORY: "{{.Memory}}"
      MOTD: "{{.MOTD}}"
      MAX_PLAYERS: "{{.MaxPlayers}}"
      DIFFICULTY: "{{.Difficulty}}"
      MODE: "{{.GameMode}}"
      ENABLE_WHITELIST: "{{.Whitelist}}"
      USE_AIKAR_FLAGS: "{{.UseAikarFlags}}"
    volumes:
      - minecraft_data:/data
    restart: unless-stopped

volumes:
  minecraft_data:
