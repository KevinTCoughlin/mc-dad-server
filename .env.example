# MC Dad Server — Container environment variables
# Copy to .env and edit: cp .env.example .env

# Server memory allocation
MEMORY=2G

# Garbage collector: g1gc (default, Aikar's flags) or zgc (low latency)
GC_TYPE=g1gc

# Minecraft Java port
PORT=25565

# Bedrock / Geyser port
BEDROCK_PORT=19132

# RCON password (required — generate with: openssl rand -base64 24)
RCON_PASSWORD=

# Minecraft version (default: latest)
MC_VERSION=latest

# Resource limits
MEM_LIMIT=3g
CPUS=2.0
